<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textviewBlue"
        android:layout_centerInParent="true"
        android:background="#4266C7"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@id/textviewBlue"
        android:id="@+id/textviewGreen"
        android:layout_above="@id/textviewBlue"
        android:background="#637E34"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@id/textviewBlue"
        android:id="@+id/textviewRed"
        android:layout_above="@id/textviewGreen"
        android:background="#A82323"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:text="Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@id/textviewBlue"
        android:id="@+id/textviewOrange"
        android:layout_below="@id/textviewBlue"
        android:background="#C5854B"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:text="Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@id/textviewBlue"
        android:id="@+id/textviewGray"
        android:layout_below="@id/textviewOrange"
        android:background="#757575"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:text="Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignLeft="@id/textviewBlue"
        android:id="@+id/textviewPink"
        android:layout_below="@id/textviewGray"
        android:background="#88239E"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:text="Pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>